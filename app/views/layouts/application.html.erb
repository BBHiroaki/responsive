<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <% if notice %>
      <p class="flash notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="flash alert"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
