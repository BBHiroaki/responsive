<h2>New book</h2>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: books_path, local: true do |f| %>
  <div>
    <label>Title</label><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <label>Body</label><br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit "Create Book" %>
  </div>
<% end %>

<hr>

<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <!-- Rails 6 でもJS不要で確実に動くように button_to を採用 -->
        <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
